@model ClinicaVet.Models.Veterinarios

@{
    ViewData["Title"] = "Apagar Veterinário";
}

<h1>Apagar</h1>

@*<h3>Are you sure you want to delete this?</h3>*@

<h3>Têm a certeza que deseja Apagar?</h3>
<div>
    <h4>Veterinários</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumCedulaProf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumCedulaProf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Imagens/Vets/@Model.Foto" width="100" alt="Foto do Veterinário @Model.Foto" title="@Model.Foto" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Regressar à Listagem</a>
    </form>
</div>
